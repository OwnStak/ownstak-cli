{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "isolatedModules": true,
        "declaration": true,
        "outDir": "./dist/src",
        "strict": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@ownstak/cli": ["src/index.ts"],
            "@ownstak/cli/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
