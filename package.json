{
    "name": "@ownstak/cli",
    "version": "0.1.2",
    "description": "OwnStak CLI",
    "type": "module",
    "main": "./src/index.js",
    "homepage": "https://ownstak.com",
    "bin": {
        "ownstak": "./src/commands/index.js",
        "ownstak-cli": "./src/commands/index.js"
    },
    "publishConfig": {
        "directory": "dist",
        "linkDirectory": true
    },
    "scripts": {
        "dev": "chokidar --silent 'src/**/*.ts' --initial 'npm build && npm run link' -c 'clear && npm run build'",
        "build": "tsc && cp -r README_NPM.md dist/README.md && npm run build:server && npm run build:serverless && npm run build:copy-templates && npm run build:copy-packagejson",
        "build:server": "esbuild src/compute/server/server.ts --sourcemap --minify --bundle --platform=node --format=esm --outfile=dist/src/compute/server/server.js --log-level=error",
        "build:serverless": "esbuild src/compute/serverless/serverless.ts --sourcemap --minify --bundle --platform=node --format=esm --outfile=dist/src/compute/serverless/serverless.js --log-level=error",
        "build:copy-templates": "cp -r src/templates/* dist/src/templates/",
        "build:copy-packagejson": "node -e \"const fs = require('fs'); const packageJson = require('./package.json'); ['scripts', 'devDependencies', 'jest', 'prettier'].forEach(key => delete packageJson[key]); fs.writeFileSync('./dist/package.json', JSON.stringify(packageJson, null, 2));\"",
        "bump-version": "npm version patch --no-git-tag-version",
        "link": "cd dist && npm link > /dev/null",
        "start": "node dist/src/commands/index.js",
        "format": "prettier --write 'src/**/*.ts'",
        "format:check": "prettier --check 'src/**/*.ts'",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "prepare": "husky install"
    },
    "dependencies": {
        "@vercel/nft": "0.29.2",
        "archiver": "7.0.1",
        "bundle-require": "5.1.0",
        "chalk": "5.4.1",
        "commander": "13.1.0",
        "glob": "11.0.2",
        "mime-types": "3.0.1",
        "semver": "7.7.1"
    },
    "devDependencies": {
        "@types/archiver": "6.0.3",
        "@types/jest": "29.5.14",
        "@types/mime-types": "2.1.4",
        "@types/node": "22.15.17",
        "@types/semver": "7.7.0",
        "chokidar-cli": "^3.0.0",
        "esbuild": "0.25.4",
        "husky": "^9.1.7",
        "jest": "29.7.0",
        "lint-staged": "16.0.0",
        "prettier": "3.5.3",
        "ts-jest": "29.3.2",
        "typescript": "5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "ownstak",
        "cli",
        "jamstack"
    ],
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "all"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transform": {
            "^.+\\.ts?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        }
    },
    "lint-staged": {
        "*.{js,ts,yml,md,json}": "prettier --write"
    }
}
