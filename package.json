{
    "name": "@ownstak/cli",
    "version": "0.1.0",
    "description": "OwnStak CLI",
    "type": "module",
    "main": "./src/index.js",
    "homepage": "https://ownstak.com",
    "bin": {
        "ownstak": "./src/commands/index.js",
        "ownstak-cli": "./src/commands/index.js"
    },
    "publishConfig": {
        "directory": "dist",
        "linkDirectory": true
    },
    "scripts": {
        "dev": "nodemon --watch 'src/**/*.ts' --ext 'ts' --exec 'clear && npm run build && npm run link'",
        "build": "tsc && cp -r README_NPM.md dist/README.md && npm run build:server && npm run build:serverless",
        "build:server": "esbuild src/compute/server/server.ts --sourcemap --bundle --platform=node --outfile=dist/src/compute/server/server.js --log-level=error",
        "build:serverless": "esbuild src/compute/serverless/serverless.ts --sourcemap --bundle --platform=node --outfile=dist/src/compute/serverless/serverless.js --log-level=error",
        "link": "cd dist && npm link > /dev/null 2>&1 || npm link && chmod +x ./ -R && cd ..",
        "start": "node dist/src/commands/index.js",
        "format": "prettier --write 'src/**/*.ts'",
        "format:check": "prettier --check 'src/**/*.ts'",
        "test": "echo \"No test specified\" && exit 0"
    },
    "dependencies": {
        "@vercel/nft": "0.29.2",
        "bundle-require": "5.1.0",
        "chalk": "5.4.1",
        "commander": "13.1.0",
        "glob": "11.0.2",
        "mime-types": "3.0.1",
        "semver": "7.7.1",
        "typescript": "5.8.3"
    },
    "devDependencies": {
        "@types/fs-extra": "11.0.4",
        "@types/mime-types": "2.1.4",
        "@types/node": "20.14.8",
        "@types/semver": "7.7.0",
        "esbuild": "0.25.2",
        "nodemon": "3.1.9",
        "prettier": "3.5.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "ownstak",
        "cli",
        "jamstack"
    ],
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "all"
    }
}
